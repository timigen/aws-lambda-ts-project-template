{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "module":"ESNext",
    "moduleResolution":"node",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": false, 
  },
  "exclude": ["**/*.test.ts"],
  "include": [
    "src/**/*.ts",
    "src/index.ts"
  ]
}