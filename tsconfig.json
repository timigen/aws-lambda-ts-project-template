{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "ES2017",                                 
    "module": "esnext",                                
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "strict": true,                               
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
